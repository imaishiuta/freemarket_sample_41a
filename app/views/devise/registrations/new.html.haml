.single-container
  %main.single-main
    %section.l-single-container
      %h2.l-single-head
        会員情報登録
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "l-single-inner"}) do |f|
        .l-single-content
          .form-group
            = f.label :nickname do
              ニックネーム
            %span.form-require
              必須
            = f.text_field :name, placeholder: "ニックネーム", html: {class: "input-default" }
          .form-group
            = f.label :email do
              メールアドレス
            %span.form-require
              必須
            = f.email_field :email, placeholder:"PC・携帯どちらでも可", html: {class: "input-default"}
            %input{type:"hidden", name:"login-type"}
          .form-group
            = f.label :password do
              パスワード
            %span.form-require
              必須
            = f.password_field :password, placeholder: "6文字以上", html: {class: "input-default"}
          .form-group
            = f.label :password do
              パスワード(確認)
            %span.form-require
              必須
            = f.password_field :password, placeholder: "6文字以上", html: {class: "input-default"}
            %input{type: "hidden", name:"after_save_callback"}
          .form-group
            = recaptcha_tags
          .form-group.rbt
            = f.submit "次に進む", html: {class: "btn-default btn-red"}
